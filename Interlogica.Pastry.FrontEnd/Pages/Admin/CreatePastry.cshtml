        </div>
    </div>
    <div class="form-group">
        <label asp-for="Confectionery.Price" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="Confectionery.Price" class="form-control"></textarea>
            <span asp-validation-for="Confectionery.Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Confectionery.BakingDate" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Confectionery.BakingDate" class="form-control" />
            <span asp-validation-for="Confectionery.BakingDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Confectionery.Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Confectionery.Description" class="form-control" />
            <span asp-validation-for="Confectionery.Description" class="text-danger"></span>
        </div>
    </div>







