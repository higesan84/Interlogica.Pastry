        <label asp-for="Confectionery.AvailableQuantity" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Confectionery.AvailableQuantity" class="form-control" />
            <span asp-validation-for="Confectionery.AvailableQuantity" class="text-danger"></span>
        </div>
